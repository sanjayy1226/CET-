class Main {
    public static void main(String[] args) {
        int arr[] = {1, 0, 2, 0, 3, 4, 0, 5};  // Initialize the array with correct syntax
        int count = 0;

        // Loop through the array to count the zeros
        for (int i = 0; i < arr.length; i++) {  // Correct loop syntax
            if (arr[i] == 0) {  // Check if the element is zero
                count += 1;  // Increment the count
            }
        }

        // Print the result
        System.out.println("No of empty boxes is " + count);  // Corrected print statement
    }
}
